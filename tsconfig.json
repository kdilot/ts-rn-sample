{
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@screen": ["src/screens"],
            "@navigation": ["src/navigations"],
            "@test/*": ["src/test/*"]
        }
    },
    "include": ["src/**/*"]
}
